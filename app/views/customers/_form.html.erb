<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>


  <%= form.fields_for :addresses, customer.addresses do |address_form| %>
    <div>
      <%= address_form.label :address_line_1, style: "display: block" %>
      <%= address_form.text_field :address_line_1 %>
    </div>
  <% end %>


  <div>
    <%= form.submit %>
  </div>
<% end %>
